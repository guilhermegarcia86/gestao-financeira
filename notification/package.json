{
  "name": "nodejs-microservice-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --selectProjects unit --passWithNoTests --no-cache --runInBand",
    "test:integration": "jest --selectProjects integration --passWithNoTests --no-cache --runInBand --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "test:staged": "npm run test -- --findRelatedTests",
    "test:coverage": "npm run test -- --coverage",
    "typeorm": "TYPEORM_CLI=true typeorm-ts-node-commonjs",
    "typeorm:ds": "npm run typeorm -- -d ./src/infra/adapter/typeorm/config/data-source.ts",
    "typeorm:migration:generate": "npm run typeorm:ds migration:generate -- src/infra/adapter/typeorm/config/migration/$npm_config_migration_name",
    "typeorm:migration:create": "npm run typeorm:ds migration:create -- src/infra/adapter/typeorm/config/migration/$npm_config_migration_name",
    "typeorm:migration:run": "npm run typeorm:ds migration:run",
    "dev:api": "ts-node-dev --respawn --transpile-only --clear --inspect=0.0.0.0:9229 src/application/api",
    "start": "node ./dist/application/api/index.js"
  },
  "engines": {
    "node": "16.14.2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^16.9.2",
    "@types/nodemailer": "^6.4.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "eslint": "^7.32.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.2.0",
    "jest-mock-extended": "^2.0.2-beta2",
    "lint-staged": "^11.1.2",
    "supertest": "^6.1.6",
    "testcontainers": "^8.8.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "axios": "^0.21.4",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "module-alias": "^2.2.2",
    "node-rdkafka": "^2.14.0",
    "nodemailer": "^6.8.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.3.5",
    "winston": "^3.3.3"
  }
}
